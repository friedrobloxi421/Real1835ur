-- Get the player
local player = game.Players.LocalPlayer

-- Create a ScreenGui
local screenGui = Instance.new("ScreenGui")
screenGui.Parent = player.PlayerGui

-- Create a Frame within the ScreenGui
local frame = Instance.new("Frame")
frame.Size = UDim2.new(0.3, 0, 0.3, 0)
frame.Position = UDim2.new(0.35, 0, 0.35, 0)
frame.BackgroundColor3 = Color3.new(0.2, 0.2, 0.2) -- Set to black
frame.BorderSizePixel = 0
frame.Active = true
frame.Parent = screenGui

-- Enable drag-and-drop functionality
local dragging = false
local dragStart
frame.InputBegan:Connect(function(input)
    if input.UserInputType == Enum.UserInputType.MouseButton1 then
        dragging = true
        dragStart = input.Position
    end
end)

frame.InputEnded:Connect(function(input)
    if input.UserInputType == Enum.UserInputType.MouseButton1 then
        dragging = false
    end
end)

game:GetService("UserInputService").InputChanged:Connect(function(input)
    if dragging and input.UserInputType == Enum.UserInputType.MouseMovement then
        local delta = input.Position - dragStart
        frame.Position = UDim2.new(
            frame.Position.X.Scale,
            frame.Position.X.Offset + delta.X,
            frame.Position.Y.Scale,
            frame.Position.Y.Offset + delta.Y
        )
        dragStart = input.Position
    end
end)

-- Create a ScrollingFrame within the Frame
local scrollingFrame = Instance.new("ScrollingFrame")
scrollingFrame.Size = UDim2.new(1, 0, 1, 0)
scrollingFrame.BackgroundColor3 = Color3.new(0, 0, 0)
scrollingFrame.BorderSizePixel = 0
scrollingFrame.Parent = frame

-- Create an array of button names and their respective functions
local buttons = {
    {"Admin", function() loadstring(game:HttpGet('https://raw.githubusercontent.com/EdgeIY/infiniteyield/master/source'))() end},
    {"AFSX", function() loadstring(game:HttpGet("https://raw.githubusercontent.com/bunnynwy/games/main/AnimeFightingX"))() end},
    {"Blox Fruits", function() loadstring(game:HttpGet("https://raw.githubusercontent.com/xDepressionx/Free-Script/main/AllScript.lua"))() end},
    {"Drag project (Anti Afk)", function() loadstring(game:HttpGet("https://raw.githubusercontent.com/Marco8642/science/main/drag%20project"))() end},
    {"Rainbow Friends", function() loadstring(game:HttpGet("https://raw.githubusercontent.com/Nicuse/FrightenedHub/main/Loader.lua", true))() end},
    {"Esp", function() loadstring(game:HttpGet(('https://raw.githubusercontent.com/zachisfunny/esp-unversal/main/script'),true))() end},
    {"Terminate Gui", function() game.Players.LocalPlayer.PlayerGui:FindFirstChild("ScreenGui"):Destroy() end, Color3.new(1, 0, 0)},  -- Red color
}

-- Create the buttons dynamically
local buttonHeight = 30
local spacing = 5
for i, buttonData in ipairs(buttons) do
    local buttonText = buttonData[1]
    local buttonFunction = buttonData[2]
    local buttonBackgroundColor = buttonData[3] or Color3.new(0, 0.5, 1)  -- Default color

    local button = Instance.new("TextButton")
    button.Size = UDim2.new(1, 0, 0, buttonHeight)
    button.Position = UDim2.new(0, 0, 0, (buttonHeight + spacing) * (i - 1) + 30)
    button.BackgroundColor3 = buttonBackgroundColor
    button.Text = buttonText
    button.TextColor3 = Color3.new(1, 1, 1)  -- White text color
    button.Font = Enum.Font.SourceSansBold
    button.TextSize = 14
    button.Parent = scrollingFrame

    button.MouseButton1Click:Connect(buttonFunction)
end



-- Create a TextLabel for the title
local titleLabel = Instance.new("TextLabel")
titleLabel.Size = UDim2.new(1, 0, 0, 30)
titleLabel.Position = UDim2.new(0, 0, 0, 0) -- Move to the very top
titleLabel.BackgroundColor3 = Color3.new(0.2, 0.2, 0.2) -- Dark gray
titleLabel.Text = "Script Hub `]` To Hide the Gui"
titleLabel.TextColor3 = Color3.new(1, 1, 1) -- White
titleLabel.Font = Enum.Font.SourceSansBold
titleLabel.TextSize = 20
titleLabel.Parent = scrollingFrame

local OrionLib = loadstring(game:HttpGet(('https://raw.githubusercontent.com/shlexware/Orion/main/source')))()
 
OrionLib:MakeNotification({
    Name = "Loaded!",
    Content = "The script has loaded!",
    Image = "rbxassetid://4483345998",
    Time = 3
})
OrionLib:Init()

local function toggleGuiVisibility()
    frame.Visible = not frame.Visible
end

-- Bind the "]" key to toggle the GUI visibility
local userinputService = game:GetService("UserInputService")
userinputService.InputBegan:Connect(function(input, gameProcessedEvent)
    if not gameProcessedEvent and input.KeyCode == Enum.KeyCode.RightBracket then
        toggleGuiVisibility()
    end
end)
